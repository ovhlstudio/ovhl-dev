{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",             // FIX: Changed from commonjs to Node16
    "moduleResolution": "Node16",   // FIX: Matches module setting
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}